<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="2dp" />
            <stroke android:width="2dp" android:color="@color/verdetransparencia10" />
            <gradient android:angle="-90" android:startColor="@color/verdetransparencia40" android:endColor="@color/verdecompleto"  />
        </shape>
    </item>
    <item
        android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="4dp" />
            <stroke android:width="4dp" android:color="@color/verdetransparencia20" />
            <gradient android:angle="-90" android:startColor="@color/verdetransparencia50" android:endColor="@color/verdecompleto"  />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <stroke android:width="4dp" android:color="@color/verdetransparencia20" />
            <gradient android:angle="-90" android:startColor="@color/verdetransparencia50" android:endColor="@color/verdecompleto"  />
        </shape>
    </item>
</selector>